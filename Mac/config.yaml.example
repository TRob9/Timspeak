# Timspeak Configuration
# Copy this file to config.yaml and fill in your API keys

stt:
  default: whisper_fast
  providers:
    whisper_local:
      # Official openai-whisper (slower but original implementation)
      enabled: true
      model_size: base  # Options: tiny, base, small, medium, large
      language: en

    whisper_fast:
      # faster-whisper (4x faster, less memory usage)
      enabled: true
      model_size: base  # Options: tiny, base, small, medium, large
      language: en
      device: cpu  # Options: cpu, cuda
      compute_type: int8  # Options: int8, float16, float32

    whisper_cloud:
      # OpenAI Whisper API (cloud-based, requires API key)
      enabled: false
      api_key: YOUR_OPENAI_API_KEY_HERE
      model: whisper-1

    google_cloud:
      # Google Cloud Speech-to-Text (requires API key and credentials)
      enabled: false
      api_key: YOUR_GOOGLE_CLOUD_API_KEY_HERE
      language_code: en-US

    macos_speech:
      # macOS Speech Recognition (native, macOS only)
      enabled: true

llm:
  # Default: ollama (no API key needed, runs locally)
  # Change to 'claude' or 'openai' after adding API keys below
  default: ollama
  providers:
    ollama:
      # Local Ollama instance (NO API KEY NEEDED)
      # Install: https://ollama.ai
      # Run: ollama pull llama2 && ollama serve
      enabled: true
      model: llama2
      base_url: http://localhost:11434

    claude:
      enabled: false
      model: claude-sonnet-4-5-20250929
      api_key: YOUR_ANTHROPIC_API_KEY_HERE
      max_tokens: 1000
      temperature: 0.3

    openai:
      enabled: false
      model: gpt-4
      api_key: YOUR_OPENAI_API_KEY_HERE
      max_tokens: 1000
      temperature: 0.3

    # Add more LLM providers as needed through LiteLLM

audio:
  sample_rate: 16000
  channels: 1
  chunk_size: 1024
  device_index: null  # null for default, or specify device number

web:
  host: 127.0.0.1  # localhost only for security
  port: 5000
  debug: false

cleaning_prompt: |
  DO NOT include any preamble, explanation, or commentary. Output ONLY the cleaned text itself.

  Clean the following dictated text by:
  1. Removing filler words (um, uh, like, you know)
  2. Fixing grammatical errors
  3. Adding appropriate punctuation
  4. Preserving the original meaning and tone
  5. Keeping technical terms and proper nouns intact

  CRITICAL: Your response must be ONLY the cleaned text. Do NOT write "Here is the cleaned text:" or any other introduction. Start directly with the cleaned content.
